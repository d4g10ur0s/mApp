#:kivy 2.0.0
<BackgroundColor@Widget>
    #gia profile
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
<BackgroundLabel@Label+BackgroundColor>:
    #8elw ena text,to text 8a allazei,to mege8os pantou idio
    background_color : .3,.5,.55,.5
    font_size : '20dp'

<Epiloges_Button@Button>:
    #8elw ena text,to text 8a allazei,to mege8os pantou idio
    background_color : .7,.1,.15,1
    font_size : '15dp'

<Profile_Layout@BoxLayout>:
    pic_layout : pic_layout
    #2 koutia, 1 gia photo ,1 gia info
    cols : 2
    orientation : 'vertical'
    BoxLayout :
        id : pic_layout
        size_hint_y : 1
        Label:
            text : "8a mpei photo"
            background_color : 0,1,0,1

<Location_Layout@BoxLayout>:
    pic_layout : pic_layout

    BoxLayout:
        id : pic_layout
        size_hint_y : 1
        orientation : 'vertical'
        Label :
            text : '8a mpei photo'

<Friend_Request_Layout@BoxLayout>:
    orientation : 'vertical'
